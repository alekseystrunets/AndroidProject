<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rvni_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="#486376">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_back"
        android:textColor="#FFFFFF"
        android:layout_marginVertical="12dp"
        android:id="@+id/rvni_header"
        android:paddingHorizontal="20dp"
        android:minWidth="140dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center"
        tool:text="Header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:background="@drawable/rounded_back"
        android:textColor="#FFFFFF"
        android:layout_marginVertical="12dp"
        android:id="@+id/rvni_date"
        android:gravity="center"
        android:minWidth="140dp"
        android:layout_width="140dp"
        android:layout_height="35dp"
        tool:text="12.12.2024"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toEndOf="@id/rvni_header"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rvni_message"
        android:minWidth="295dp"
        android:layout_width="295dp"
        android:layout_height="46dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_for_text"
        android:minHeight="50dp"
        android:paddingHorizontal="20dp"
        android:paddingTop="5dp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@+id/rvni_header"
        tool:text="Header text new message" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rvni_delet_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/baseline_arrow_drop_down_24"
        app:layout_constraintStart_toEndOf="@id/rvni_date"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>